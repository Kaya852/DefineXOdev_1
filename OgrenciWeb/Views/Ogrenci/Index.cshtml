@model IEnumerable<Dictionary<string, string>>

<h2>Öğrenci Listesi</h2>

<table>
    <thead>
        <tr>
            <th>No</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Bölüm</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kayit in Model)
        {
            <tr>
                <td>@kayit["No"]</td>
                <td>@kayit["Adi"]</td>
                <td>@kayit["Soyadi"]</td>
                <td>@kayit["Bolum"]</td>
                <td>
                    <form method="post" action="@Url.Action("Delete", "Ogrenci")">
                        <input type="hidden" name="no" value="@kayit["No"]" />
                        <button type="submit">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Ogrenci")">Yeni Kayıt Ekle</a>
